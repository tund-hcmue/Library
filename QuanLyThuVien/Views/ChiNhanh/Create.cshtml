                <input asp-for="NgayThanhLap" class="form-control" />
                <span asp-validation-for="NgayThanhLap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDQuanLy" class="control-label"></label>
                <input asp-for="IDQuanLy" class="form-control" />
                <span asp-validation-for="IDQuanLy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDNhanVien" class="control-label"></label>
                <input asp-for="IDNhanVien" class="form-control" />
                <span asp-validation-for="IDNhanVien" class="text-danger"></span>
