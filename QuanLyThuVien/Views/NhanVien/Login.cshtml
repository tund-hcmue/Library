@model QuanLyThuVien.ViewModels.NhanVienLogin
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Đăng nhập";

    Layout = null;
}
<br />
<br />

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/css/styleF.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
</head>
<body id="LoginForm">
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h3>Nhân viên thư viện đăng nhập</h3>
                </div>
                @using (Html.BeginForm("Login", "NhanVien", new { @class = "Login" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.EditorFor(m => m.TaiKhoan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tài khoản" } })
                        @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(m => m.MatKhau, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mật khẩu" } })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group regis">
                        <input type="submit" name="name" value="Đăng nhập" class="btn btn-primary regis" />
                    </div>
                }
                <div class="form-group regis">
                    <a href="../Home/Index">Quay về trang chủ</a>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
