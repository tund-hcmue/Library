@model QuanLyThuVien.Models.Sach

@{
    ViewData["Title"] = "Thêm sách mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /> <br /> <br />
<h4>Thêm mới sách</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDLoai" class="control-label"></label>
                @Html.DropDownList("IDLoai", (IEnumerable<SelectListItem>)ViewBag.ListLoaiSach, new { @class = "form-control" })
                <span asp-validation-for="IDLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSach" class="control-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacGia" class="control-label"></label>
                <input asp-for="TacGia" class="form-control" />
                <span asp-validation-for="TacGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HinhAnh)
                <div>
                    @*Name của thẻ input file phải trùng tên với tham số bên controller*@
                    <input type="file" name="fileUpload">
                    @*Thông báo trùng*@
                    @ViewBag.ThongBao
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NhaXuatBan" class="control-label"></label>
                <input asp-for="NhaXuatBan" class="form-control" />
                <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamXuatBan" class="control-label"></label>
                <input asp-for="NamXuatBan" class="form-control" />
                <span asp-validation-for="NamXuatBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTrang" class="control-label"></label>
                <input asp-for="SoTrang" class="form-control" />
                <span asp-validation-for="SoTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayNhap" class="control-label"></label>
                <input asp-for="NgayNhap" class="form-control" />
                <span asp-validation-for="NgayNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TienMua" class="control-label"></label>
                <input asp-for="TienMua" class="form-control" />
                <span asp-validation-for="TienMua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TienMuon" class="control-label"></label>
                <input asp-for="TienMuon" class="form-control" />
                <span asp-validation-for="TienMuon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
        </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

